{
  "name": "cli-image-converter",
  "version": "0.1.0",
  "private": true,
  "bin": "bin/cli.js",
  "main": "lib/image-converter.js",
  "scripts": {
    "build": "npx eslint . && npx tsc --build && rm -rf ./lib/ && mkdir -p ./lib/ && mv -- ./src/image-converter.js ./lib/ && mv -- ./src/image-converter.d.ts ./lib/",
    "lint": "npx eslint .",
    "test:prod": "jasmine --config=./spec/support/jasmine-prod.json",
    "test:dev": "env NODE_OPTIONS=--loader=ts-node/esm jasmine --config=./spec/support/jasmine-dev.json",
    "converter:prod": "node src/tools/converter/image-converter.mjs",
    "converter:dev": "npx ts-node-esm src/tools/converter/image-converter.mts",
    "pretty-quick": "npx pretty-quick --staged",
    "postinstall": "npx tsc --build && rm -rf ./lib/ && mkdir -p ./lib/ && mv -- ./src/image-converter.js ./lib/ && mv -- ./src/image-converter.d.ts ./lib/"
  },
  "devDependencies": {
    "@types/jasmine": "^4.0.3",
    "@types/node": "^18.0.6",
    "@types/sharp": "^0.30.5",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "@vingle/bmp-js": "^0.2.5",
    "commander": "^9.4.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "globby": "^13.1.2",
    "jasmine": "^4.2.1",
    "jasmine-spec-reporter": "^7.0.0",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "sharp": "^0.30.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "type": "module",
  "dependencies": {
    "husky": "^8.0.1"
  }
}
